// Place your settings in this file to overwrite default and user settings.
{
    "cSpell.ignorePaths": [
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/**",
        "package.json",
        "**/cspell.json",
        "**/cSpell.json",
        "**/.cspell.json",
        "dictionaries",
        ".vscode",
        "typings"
    ],
    "cSpell.languageSettings": [
        // This one works with python
        {
            "languageId": "python",
            "includeRegExpList": [
               // Python Comments
               "/#.*|(?:('''|\"\"\")[^\\1]+?\\1)/g"
            ]
        },
        // this one works with javascript, C, typescript, etc,
        {
            "languageId": "javascript",
            "includeRegExpList": [
               // Javascript Comments
               "/(?:\\/\\/.*)|(?:\\/\\*[\\s\\S]+?\\*\\/)/g"
            ]
        }
    ],
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "dist": true
    }
}